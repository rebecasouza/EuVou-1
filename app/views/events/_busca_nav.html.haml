.row
  = form_tag events_path, method: :get do
    %div
      = text_field_tag :search, params[:search], style: 'width: 130px; float: left;', placeholder: 'Procurar'
      = submit_tag "Ok", name: nil, class: 'btn', style: 'width: 50px; padding: 0 !important; float:right;'
  %div{:style => "clear: both"}
    = render "categories/index"
= link_to 'Novo evento', new_event_path, class: "btn btn-default"