<div>
	<h3><%= @user.name %></h3>
	<%= image_tag @user.image.url(:thumb) %>
</div>
<% if current_user == (@user) %>
	<div class="row" style="padding-left: 12px;">
		<%= link_to "Novo evento", new_event_path, class: "btn btn-success" %> 
		<%= link_to "Editar perfil", edit_user_registration_path(@user), class: "btn btn-success" %> 
	</div>
<% end %>


<% if @upcoming_events.any? %>
	<h4>Pr√≥ximos eventos</h4>
	<%= render 'shared/table', object: @upcoming_events %>
<% end %>

<% if @previous_events.any? %>
	<h4>Eu fui</h4>
	<%= render 'shared/table', object: @previous_events %>
<% end %>

<% if @user.events.any? %>
	<h4>Eventos de <%= @user.name %></h4>
	<%= render 'shared/table', object: @user.events %>
<% end %>
